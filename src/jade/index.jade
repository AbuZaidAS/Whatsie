      .container
        h2.title OS X, Windows & Linux
        
      img.wide(src='img/platforms.jpg' alt='Platforms Preview')
        
    section#whatsapp-features
      .container
        h2.title Simple. Personal. Real Time Messaging.
          
        ul.container
          li
            .tile
              span(class='wafeature wafeature-1' width='120' height='120')
              p.description Group chats
          li
            .tile
              span(class='wafeature wafeature-2' width='120' height='120')
              p.description Send photos & videos
          li
            .tile
              span(class='wafeature wafeature-3' width='120' height='120')
              p.description Share locations
          
        a.button.bordered(href='https://www.whatsapp.com/' target='_blank') Explore on whatsapp.com
        
    section.inverted#features
      .container
        h2.title Integrated with your OS
        ul.clearfix
          li
            span.feature.feature-1
            .subtitle Launch on#[br]OS startup
          li
            span.feature.feature-2
            .subtitle Native#[br]Notifications
          li
            span.feature.feature-3
            .subtitle Always#[br]Notified
      
    section#download
      .container
        h2.title Download
        
      ul.container
        li: a.button.bordered(href='https://github.com/Aluxian/Whatsie/releases/download/v1.1.0/UnofficialWhatsApp.dmg')
          span.osx
